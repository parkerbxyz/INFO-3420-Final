@model IEnumerable<INFO_3420_Final.Models.Donation>

@{
    ViewBag.Title = "Donations";
}

<h2>Donations</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    @Html.ActionLink("Donate", "Donate", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            Username
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.User.UserName
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DonationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.DonationId }) |
            @Html.ActionLink("Details", "Details", new { id = item.DonationId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.DonationId })
        </td>
    </tr>
}

</table>
