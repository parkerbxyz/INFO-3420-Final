@model IEnumerable<INFO_3420_Final.Models.Location>

@{
    ViewBag.Title = "Locations";
}

<h2>Locations</h2>
<br />
<p>We have partnered with other like-minded organizations in the community to offer convenient donation drop-off locations. Take your new or gently used shoes to a location near you and let them know you're making a donation to Secondhand Shoes. You will be provided with a donation receipt and our partner will take care of the rest.</p>

<hr />
@using (Html.BeginForm("Search", "Locations", FormMethod.Get, new { @class = "form-inline" }))
{
    <input type="text" class="form-control" name="location" placeholder="Search Locations" />
    <input type="submit" class="btn btn-default" value="Search" />
}
<hr />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Partner.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zip)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(model => item.Partner.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LocationId }) |
                @Html.ActionLink("Details", "Details", new { id = item.LocationId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LocationId })
            </td>
        </tr>
    }

</table>
